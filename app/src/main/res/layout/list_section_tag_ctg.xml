<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/t_mid">

    <!--Button
        style="@android:style/Widget.Holo.Button.Borderless.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="+"
        android:id="@+id/button_collapse" /-->

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_collapse"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_collapsed"
        android:contentDescription="@string/icon"
        style="@android:style/Widget.Holo.ActionButton"/>

    <TextView
        android:id="@+id/title"
        android:paddingLeft="5dp"
        android:paddingStart="5dp"
        android:paddingRight="5dp"
        android:paddingEnd="5dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".99"
        android:layout_gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/placeholder" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/icon_options"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_action_overflow"
        android:contentDescription="@string/icon"
        style="@android:style/Widget.Holo.ActionButton"
        android:onClick="CreateCtgMenu" />

</LinearLayout>
