<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="2dp"
        android:padding="10dp" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_color"
                android:id="@+id/textView"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="10dp"
                style="@style/normalText"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_text_color"
                android:layout_column="2"
                android:layout_weight=".9"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/text_color"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/base_color"
                android:id="@+id/textView2"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="10dp"
                style="@style/normalText"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_base_color"
                android:layout_column="2"
                android:layout_weight=".9"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/base_color"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heading_color"
                android:id="@+id/textView3"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="10dp"
                style="@style/normalText"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_heading_color"
                android:layout_column="2"
                android:layout_weight=".9"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/heading_color"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subheading_color"
                android:id="@+id/textView4"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="10dp"
                style="@style/normalText"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_subheading_color"
                android:layout_column="2"
                android:layout_weight=".9"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/subheading_color"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/highlight_color"
                android:id="@+id/textView5"
                android:layout_column="1"
                android:layout_gravity="center_vertical|right"
                android:paddingRight="10dp"
                style="@style/normalText"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/button_highlight_color"
                android:layout_column="2"
                android:layout_weight=".9"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/highlight_color"/>

        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset_to_default"
        android:id="@+id/button_theme_reset"/>

</LinearLayout>
