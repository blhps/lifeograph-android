<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityLogin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t_mid" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:text="@string/diaries"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textIsSelectable="true"/>

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/read_only"
            android:id="@+id/switch_read_only"
            android:layout_gravity="end|center_vertical"
            android:singleLine="true"
            android:textColor="@color/t_darker"
            android:ellipsize="middle"
            android:shadowColor="@color/t_darkest" />

    </LinearLayout>

    <!--TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="@string/caution_not_final"
        android:textColor="@color/red"
        android:textAppearance="?android:attr/textAppearanceMedium" /-->

    <ListView
        android:id="@+id/list_diaries"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.99"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

</LinearLayout>
