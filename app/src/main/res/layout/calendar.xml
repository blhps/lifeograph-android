<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_month_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/t_mid"
        android:gravity="center"
        android:text="@string/placeholder"
        android:textColor="@color/t_lightest"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/gv_calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnWidth="25dp"
        android:listSelector="@drawable/selector_theme_colors"
        android:numColumns="7"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_month_name"
        tools:layout_editor_absoluteX="15dp">

    </GridView>

</androidx.constraintlayout.widget.ConstraintLayout>

