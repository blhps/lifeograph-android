<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LifeoTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/LifeoTheme.ActionBarStyle</item>
        <item name="android:actionBarItemBackground">@drawable/themed_selector_dark</item>
        <item name="android:actionBarTabStyle">@style/LifeoTheme.TabStyle</item>
        <item name="android:actionBarWidgetTheme">@style/LifeoTheme.Widget</item>

        <item name="colorAccent">@color/t_lighter</item>
        <item name="colorPrimary">@color/t_light</item>
        <item name="colorPrimaryDark">@color/t_darkest</item>
    </style>

    <style name="LifeoButtonStyle"
           parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/t_darker</item>
    </style>

    <!-- ACTIONBAR STYLES -->
    <style name="LifeoTheme.ActionBarStyle"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/t_dark</item>
        <item name="backgroundStacked">@color/t_dark</item>
        <item name="backgroundSplit">@color/t_dark</item>
        <item name="subtitleTextStyle">@style/LifeoTheme.SubtitleTextStyle</item>
    </style>

    <style name="LifeoTheme.TabStyle" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="background">@drawable/action_bar_tabs</item>
    </style>

    <style name="LifeoTheme.SubtitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/t_light</item>
    </style>

    <style name="LifeoTheme.Widget" parent="@style/Theme.AppCompat.Light">
        <!--item name="android:popupMenuStyle">@style/PopupMenu.Lifeo</item-->
        <item name="android:dropDownListViewStyle">@style/LifeoTheme.DropDownListView</item>
    </style>

    <style name="LifeoTheme.DropDownListView"
           parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/themed_selector_dark</item>
    </style>

    <!-- DIALOG STYLES -->
    <style name="FullHeightDialog" parent="LifeoTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- TEXT STYLES -->
    <style name="boldText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="italicText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="normalText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="headingSpan" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    
    <style name="subheadingSpan" parent="@android:style/TextAppearance.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="commentSpan" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
